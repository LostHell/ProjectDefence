@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<main class="site-content login">
    <section class="site-wrapper">
        <h2 class="section-title">Login to your account</h2>
        <article class="login-container">
            <section class="login-form">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <section class="form-label">
                        <input type="text" asp-for="Input.Username" placeholder="Username...">
                        <i class="fas fa-user"></i>
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </section>
                    <section class="form-label">
                        <input type="password" asp-for="Input.Password" placeholder="Password...">
                        <i class="fas fa-lock"></i>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </section>
                    <section class="form-label">
                        <input type="submit" value="Login">
                    </section>
                </form>
            </section>
            <section class="login-bg">
            </section>
        </article>
    </section>
</main>

