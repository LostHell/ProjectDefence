@model ChangePasswordInputViewModel
@{
    ViewData["Title"] = "Change Password page";
}

<main class="site-content login">
    <section class="site-wrapper">
        <h2 class="section-title">Change you'r password!</h2>
        <article class="login-container">
            <section class="login-form">
                <form asp-controller="Account" asp-action="ChangePassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <section class="form-label">
                        <input type="password" asp-for="OldPassword" placeholder="Current password...">
                        <i class="fas fa-lock"></i>
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </section>
                    <section class="form-label">
                        <input type="password" asp-for="NewPassword" placeholder="New Password...">
                        <i class="fas fa-lock"></i>
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </section>
                    <section class="form-label">
                        <input type="password" asp-for="RepeatPassword" placeholder="Repeat Password...">
                        <i class="fas fa-lock"></i>
                        <span asp-validation-for="RepeatPassword" class="text-danger"></span>
                    </section>
                    <section class="form-label">
                        <input type="submit" value="Update Password">
                    </section>
                </form>
            </section>
            <section class="login-bg">
            </section>
        </article>
    </section>
</main>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}