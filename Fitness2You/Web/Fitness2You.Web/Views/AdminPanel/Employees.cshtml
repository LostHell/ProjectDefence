@model IList<EmployeeInputViewModel>
@{
    ViewData["Title"] = "Employees page";
}

<main class="site-content admin">
    @if (this.User.IsInRole("Admin"))
    {
        <h2>Welcome ADMIN!</h2>
        <section class="nav">
            <section class="site-wrapper">
                <nav class="admin-nav">
                    <a asp-controller="AdminPanel" asp-action="Admin">Subscriptions</a>
                    <a asp-controller="AdminPanel" asp-action="Classes">Classes</a>
                    <a asp-controller="AdminPanel" asp-action="AllUser">Users</a>
                    <a asp-controller="AdminPanel" asp-action="Employees" class="active">Trainers</a>
                </nav>
            </section>
        </section>
        <section class="site-wrapper">
            <section class="main">
                <section class="add-section">
                    <a asp-controller="AdminPanel" asp-action="AddEmployee">
                        <i class="fas fa-plus-circle"></i>
                    </a>
                </section>
                <section class="trainers">
                    @foreach (var employee in Model)
                    {
                        <article class="trainer">
                            <section class="trainer-img">
                                <img src="@employee.ImageUrl" alt="Image not found!">
                            </section>
                            <section class="trainer-name">@employee.Fullname</section>
                            <section class="trainer-title">@employee.Title</section>
                            <section class="trainer-salary">@employee.Salary €</section>
                            <section class="card-actions">
                                <a asp-controller="AdminPanel" asp-action="EditEmployee" asp-route-id="@employee.Id" class="edit">Edit</a>
                                <a asp-controller="AdminPanel" asp-action="DeleteEmployee" asp-route-id="@employee.Id" class="delete">Delete</a>
                            </section>
                        </article>
                    }
                </section>
            </section>
        </section>
    }
</main>