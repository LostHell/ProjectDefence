@model SubscriptionsInputViewModel
@{
    ViewData["Title"] = "Add Subscription page";
}

<main class="site-content admin">
    @if (this.User.IsInRole("Admin"))
    {
        <h2>Welcome ADMIN!</h2>
        <section class="nav">
            <section class="site-wrapper">
                <nav class="admin-nav">
                    <a asp-controller="AdminPanel" asp-action="Admin" class="active">Subscriptions</a>
                    <a asp-controller="AdminPanel" asp-action="Classes">Classes</a>
                    <a asp-controller="AdminPanel" asp-action="AllUser">Users</a>
                    <a asp-controller="AdminPanel" asp-action="Employees">Trainers</a>
                </nav>
            </section>
        </section>
        <section class="site-wrapper">
            <section class="main">
                <section class="contacts">
                    <h2>Add new Subscription</h2>
                    <form method="post" class="contacts-form" asp-controller="AdminPanel" asp-action="AddSubscription">
                        <div asp-validation-summary="ModelOnly"></div>
                        <section class="form-label">
                            <input type="text" asp-for="Name" placeholder="Name of your new subscription...">
                            <i class="fas fa-file-signature"></i>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </section>
                        <section class="form-label">
                            <input type="text" asp-for="ImageUrl" placeholder="Add your subscription Image link - https://...">
                            <i class="far fa-file-image"></i>
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </section>
                        <section class="form-label">
                            <input type="text" asp-for="Price" placeholder="Price of your subscription...">
                            <i class="fas fa-dollar-sign"></i>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </section>
                        <section class="form-label">
                            <input type="text" asp-for="Discount" placeholder="Discount of your subscription (Range 0 - 100)...">
                            <i class="fas fa-percent"></i>
                            <span asp-validation-for="Discount" class="text-danger"></span>
                        </section>
                        <section class="form-label">
                            <input type="text" asp-for="IsActive" placeholder="Do you want to activate this subscription(True/False)...">
                            <i class="fas fa-check"></i>
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </section>
                        <section class="form-label">
                            <input type="submit" value="Create now!">
                        </section>
                    </form>
                </section>
            </section>
        </section>
    }
</main>