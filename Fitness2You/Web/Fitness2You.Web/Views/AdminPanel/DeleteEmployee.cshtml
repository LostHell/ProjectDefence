@model EmployeeInputViewModel
@{
    ViewData["Title"] = "Delete page";
}

<main class="site-content admin">
    @if (this.User.IsInRole("Admin"))
    {
        <partial name="AdminNavigationBar/_AdminNavigationBarEmployeeActive" />
        <section class="site-wrapper">
            <section class="main">
                <section class="add-section">
                    <a asp-controller="AdminPanel" asp-action="AddEmployee">
                        <i class="fas fa-plus-circle"></i>
                    </a>
                </section>
                <section class="subs">
                    <article class="sub">
                        <section class="sub-img">

                            <img src="@Model.ImageUrl" alt="Image not found!">
                        </section>
                        <section class="sub-name">@Model.Fullname</section>
                        <section class="sub-price">@Model.Salary €</section>
                        <section class="sub-discount">@Model.Title</section>
                        <form method="post">
                            <section class="card-actions">
                                <a class="delete">
                                    <input type="submit" value="Delete" />
                                    <input type="submit" value="Go Back" onclick="history.back()" />
                                </a>
                            </section>
                        </form>
                    </article>
                </section>
            </section>
        </section>
    }
</main>