@model RegisterInputViewModel
@{
    ViewData["Title"] = "Register Page";
}

<main class="site-content register">
    <section class="site-wrapper">
        <h2 class="section-title">Register your account</h2>
        <article class="register-container">
            <section class="register-bg">
            </section>
            <section class="register-form">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <section class="form-label">
                        <input type="text" name="Username" placeholder="Username..." asp-for="Username">
                        <i class="fas fa-user"></i>
                        <span asp-validation-for="Username"></span>
                    </section>
                    <section class="form-label">
                        <input type="email" name="Email" placeholder="Email..." asp-for="Email">
                        <i class="fas fa-envelope"></i>
                        <span asp-validation-for="Email"></span>
                    </section>
                    <section class="form-label">
                        <input type="password" name="Password" placeholder="Password..." asp-for="Password">
                        <i class="fas fa-lock"></i>
                        <span asp-validation-for="Password"></span>
                    </section>
                    <section class="form-label">
                        <input type="password" name="RepeatPassword" placeholder="Repeat password..." asp-for="RepeatPassword">
                        <i class="fas fa-lock"></i>
                        <span asp-validation-for="RepeatPassword"></span>
                    </section>
                    <section class="form-label">
                        <input type="submit" value="Register">
                    </section>
                </form>
            </section>
        </article>
    </section>
</main>