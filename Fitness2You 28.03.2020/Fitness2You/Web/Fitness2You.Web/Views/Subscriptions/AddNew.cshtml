@model InputSubscriptionsViewModel
@{ 
    ViewData["Title"] = "Add Subscription page";
}

    <section class="py-5">
        <div class="container">
            <h1 style="margin: 2%; text-align: center;">Add new Subscription</h1>
            <div style="padding: 5%;">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label for="Name">Subscription name</label>
                        <input type="text" class="form-control" id="Name" name="Name" placeholder="Subscription name...">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Description">Description</label>
                        <input type="text" class="form-control" id="Description" name="Description" placeholder="Description...">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Price">Subscription price</label>
                        <input min="0.00" max="9999" type="number" class="form-control" id="Price" name="Price" placeholder="Subscription price...">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Discount">Subscription discount</label>
                        <input min="0" max="1000" type="number" class="form-control" id="Discount" name="Discount" placeholder="Subscription discount...">
                        <span asp-validation-for="Discount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="ImagePath">Subscription Image</label>
                        <input type="text" class="form-control" id="ImagePath" name="ImagePath" placeholder="https://...">
                        <span asp-validation-for="ImagePath" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary text-uppercase">Submit</button>
                </form>
            </div>
        </div>
    </section>